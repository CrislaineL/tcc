datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  senha String
}

model Consulta{
  id Int @id @default(autoincrement())
  nomepet String
  especie Especie
  raca String?
  nomeproprietario String
  datanascpet DateTime
  email String @unique
  alergia String?
}

model Login {
  id  Int @id @default(autoincrement()) 
  nome  String
  email String  @unique  
  senha  String   
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt  

  @@index([email]) 
}

model Adocao {
  id  Int  @id @default(autoincrement())
  nomepet  String
  especie  String
  raca String
  nomeproprietario String
  datanascpet ateTime
  email String
  alergia String
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Especie {
  cachorro
  gato
  peixe
  passaro
}